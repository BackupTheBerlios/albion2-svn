  CXXFLAGS := $(CFLAGS)
  LDFLAGS += -L$(BINDIR) -L$(LIBDIR) `sdl-config --libs` -L"jpeglib" -L"zlib" -L"../../lib" -L"/usr/lib" -L"/usr/lib" -L"/usr/lib" ../../a2e/lib/liba2e.a -lGL -lGLU -lz -ljpeg -lSDL_net -lSDL_image -lode -lfreetype -lftgl -llua -lxml2 -lgomp
