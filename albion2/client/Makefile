	@$(CXX) $(CXXFLAGS) -o $@ -c $<

$(OBJDIR)/main.o: main.cpp
	-@$(CMD_MKOBJDIR)
	@echo $(notdir $<)
	@$(CXX) $(CXXFLAGS) -o $@ -c $<

-include $(OBJECTS:%.o=%.d)

